<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gorselFinal.HavaDurumu"
             Title="Hava Durumu">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="add.png" Order="Primary" Text="Ekle" Clicked="AddClicked"/>
        <ToolbarItem IconImageSource="update.png" Order="Primary" Text="GÃ¼ncelle" Clicked="UpdateClicked"/>
    </ContentPage.ToolbarItems>

    <RefreshView x:Name="refreshView" Refreshing="refreshView_Refreshing">
        <CollectionView x:Name="listCity">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5" RowDefinitions="Auto,*" RowSpacing="10" ColumnDefinitions="*,Auto">
                        <Label Grid.Row="0" Grid.Column="0" Text="{Binding Name}" FontSize="Title" VerticalOptions="Center"/>
                        <ImageButton Grid.Row="0" Grid.Column="1" Source="remove.png" WidthRequest="30"
                                     HeightRequest="30" CommandParameter="{Binding Name}" Clicked="Remove_Clicked"/>
                        <WebView Grid.Row="1" Grid.ColumnSpan="2" Source="{Binding Source}" BackgroundColor="White" HeightRequest="100"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>
